{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "shared-build",
      "host": {
        "sourcePath": "/var/app/current/build"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "sariamirza/client-prod",
      "hostname": "client",
      "mountPoints": [
        {
          "sourceVolume": "shared-build",
          "containerPath": "/app/build"
        }
      ],
      "essential": false
    },
    {
      "name": "nginx",
      "essential": true,
      "image": "sariamirza/nginx-prod",
      "hostname": "nginx",
      "mountPoints": [
        {
          "sourceVolume": "shared-build",
          "containerPath": "/usr/share/nginx/build"
        }
      ],
      "links": ["client","server"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "server",
      "image": "sariamirza/api-prod",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "sariamirza/worker-prod",
      "hostname": "worker",
      "essential": false
    }
  ]
}
