{
  "AWSEBDockerrunVersion": "3",
    "volumes": [
    {
      "name": "shared-build",
      "host": {
        "sourcePath": "/var/app/current/build"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "client",
      "image": "sariamirza/client-prod",
      "hostname": "client",
      "mountPoints": [
        {
          "sourceVolume": "shared-build",
          "containerPath": "/app/build"
        }
      ],
      "essential": false
    },
    {
      "name": "nginx",
      "essential": true,
      "image": "sariamirza/nginx-prod",
      "hostname": "nginx",
      "mountPoints": [
        {
          "sourceVolume": "shared-build",
          "containerPath": "/usr/share/nginx/build"
        }
      ],
      "links": ["client", "server"],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "server",
      "image": "sariamirza/api-prod",
      "hostname": "api",
      "essential": false,
      "links": ["redis", "postgres"],
      "environment": [
        {
          "REDIS_HOST": "redis",
          "REDIS_PORT": "6379",
          "PGUSER": "postgres",
          "PGHOST": "postgres",
          "PGDATABASE": "demo",
          "PGPASSWORD": "40884432SARsar123@",
          "PGPORT": "5432"
        }
      ]
    },
    {
      "name": "worker",
      "image": "sariamirza/worker-prod",
      "hostname": "worker",
      "essential": false,
      "environment": [
        {
          "REDIS_HOST": "redis",
          "REDIS_PORT": "6379"
        }
      ]
    },
    {
      "name": "postgres",
      "image": "postgres",
      "hostname": "postgres",
      "environment": [
        {
          "POSTGRES_PASSWORD": "40884432SARsar123@",
          "POSTGRES_DB": "demo"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis",
      "hostname": "redis"
    }
  ]
}
